@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}
<partial name="_SuccessMessage" for="SuccessMessage" />

<h1 class="text-navyblue">@ViewData["Title"]</h1>

<div class="profile-fill-card">
    <form id="profile-form" method="post">
        <div class="form-group" style="max-width:350px">
            <label class="text-gray" asp-for="Input.Email"></label>
            @if (Model.IsEmailConfirmed)
            {
                <input asp-for="Input.Email" class="form-control" />
            }
            else
            {
                <input asp-for="Input.Email" class="form-control" />
                <button id="email-verification" type="submit" asp-page-handler="SendVerificationEmail" class="btn btn-link">Send verification email</button>
            }
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <div class="form-group" style="max-width:350px">
            <label class="text-gray" asp-for="Input.PhoneNumber"></label>
            <input asp-for="Input.PhoneNumber" class="form-control" />
            <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
        </div>
        <div class="form-group m-0">
            <button id="update-profile-button" type="submit" class="btn btn-primary">Save</button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}