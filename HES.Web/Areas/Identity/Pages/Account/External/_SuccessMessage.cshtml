@model string

@if (!String.IsNullOrEmpty(Model))
{
<div id="success-alert" class="alert alert-success alert-dismissible shadow-lg custom-success-alert fade show" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <h4 class="alert-heading">Success</h4>
    <hr>
    <div class="mb-2">
        @Model
    </div>
</div>
}
<script>
    setTimeout(function () { $('#success-alert').alert('close'); }, 4500);
</script>