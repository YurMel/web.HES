@model HES.Web.Pages.Settings.DeviceAccessProfiles.IndexModel

@if (Model.ProfileHasForeignKey)
{
    <h5 class="text-gray mb-4 ">The device access profile @Model.DeviceAccessProfile.Name was applied, apply another profile before deleting.</h5>
    <div class="text-right">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
    </div>
}
else
{
    <h5 class="text-gray mb-4 ">You want to delete device access profile @Model.DeviceAccessProfile.Name?</h5>
    <form method="post" class="text-right">
        <input type="hidden" asp-for="DeviceAccessProfile.Id" name="id" />
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
        <input type="submit" value="Delete" class="btn btn-danger" asp-page-handler="DeleteProfile" />
    </form>
}