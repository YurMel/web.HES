@model HES.Web.Pages.Workstations.IndexModel

<form method="post">
    <input type="hidden" asp-for="Workstation.Id" />
    <div class="form-group">
        <label asp-for="Workstation.Department.CompanyId" class="control-label text-gray"></label>
        <select id="companies" asp-for="Workstation.Department.CompanyId" onchange="GetDepartment(this.value)" class="form-control text-navyblue" asp-items="ViewBag.CompanyId"></select>
    </div>
    <div class="form-group">
        <label asp-for="Workstation.Department" class="control-label text-gray"></label>
        <select id="departments" asp-for="Workstation.DepartmentId" asp-items="ViewBag.DepartmentId" class="form-control text-navyblue"></select>
    </div>
    <label class="control-label text-gray">Unlock settings</label>
    <ul class="list-group mb-3">
        <li class="list-group-item d-flex justify-content-between align-items-center">
            Has RFID
            <div class="custom-control custom-switch">
                <input asp-for="Workstation.RFID" type="checkbox" class="custom-control-input" id="hasRfid" value="true">
                <label class="custom-control-label" for="hasRfid"></label>
            </div>
        </li>
    </ul>
    <div class="form-group m-0 text-right">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
        <input type="submit" value="Save" class="btn btn-primary" asp-page-handler="EditWorkstation" />
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
