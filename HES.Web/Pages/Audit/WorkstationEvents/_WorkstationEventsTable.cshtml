@model HES.Web.Pages.Audit.WorkstationEvents.IndexModel
@* Top table items *@
<div class="row align-items-center mr-0">
    <div class="col-auto">
        <h1 class="text-navyblue">Workstation Events</h1>
    </div>
    <div class="col" id="loading"></div>
    <div class="col-auto">
        <button class="btn btn-light p-0" data-toggle="collapse" data-target="#filter-collapse" title="Filter">
            <img style="width:32px;height:32px;" src="~/svg/action/filter.svg" />
        </button>
    </div>
    <div class="col-auto p-1">
        <div class="form-group has-search-right m-0">
            <div class="form-control-feedback">
                <img class="img-size" src="~/svg/action/search.svg" />
            </div>
            <input id="searchbox" type="text" class="form-control" placeholder="Search">
        </div>
    </div>
</div>

<table id="workstationEvents" class="display table table-hover border rounded w-100">
    <thead>
        <tr>
            <th class="d-none"></th>
            <th data-priority="1">
                @Html.DisplayNameFor(model => model.WorkstationEvents[0].Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WorkstationEvents[0].EventId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WorkstationEvents[0].SeverityId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WorkstationEvents[0].Note)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WorkstationEvents[0].Workstation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WorkstationEvents[0].UserSession)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WorkstationEvents[0].Device)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WorkstationEvents[0].Employee)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WorkstationEvents[0].Department.Company)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WorkstationEvents[0].Department)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WorkstationEvents[0].DeviceAccount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WorkstationEvents[0].DeviceAccount.Type)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.WorkstationEvents)
        {
            <tr>
                <td class="d-none"></td>
                <td>
                    @TimeZoneInfo.ConvertTimeFromUtc((DateTime)item.Date, TimeZoneInfo.Local)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EventId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SeverityId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Note)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Workstation.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserSession)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Device.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Employee.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Department.Company.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Department.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DeviceAccount.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DeviceAccount.Type)
                </td>
            </tr>
        }
    </tbody>
</table>

@* Bottom table items *@
<div class="row mt-2">
    <div class="col d-flex justify-content-center justify-content-lg-start align-items-center mb-1 text-nowrap">
        <span class="d-flex align-items-center mr-1 text-navyblue">Show entries</span>
        <div id="entries_place"></div>
    </div>
    <div id="showing_place" class="col d-flex justify-content-center align-items-center mb-1 text-navyblue text-nowrap"></div>
    <div id="pagination_place" class="col d-flex justify-content-center justify-content-lg-end align-items-center mb-1"></div>
</div>

<script src="~/js/dt-init-workstation-events.js"></script>