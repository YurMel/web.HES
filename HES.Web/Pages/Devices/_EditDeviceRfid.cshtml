@model HES.Web.Pages.Devices.IndexModel

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Device.Id" />
    <div class="form-group">
        <h5 class="text-navyblue">@Model.Device.Id</h5>
    </div>
    <div class="form-group">
        <label asp-for="Device.RFID" class="text-gray"></label>
        <input asp-for="Device.RFID" class="form-control text-navyblue" />
    </div>
    <div class="form-group m-0 text-right">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
        <input type="submit" value="Save" class="btn btn-primary" asp-page-handler="EditDeviceRfid" />
    </div>
</form>